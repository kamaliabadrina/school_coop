<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<div class="d-flex justify-content-between align-items-center">
  <h1>Products</h1>
  <% if user_signed_in? %>
    <%= link_to "Add New Product", new_product_path, class: "btn btn-primary" %>
  <% end %>
</div>

<hr style="border: 0.5px solid black;">

<div class="container">
  <!-- Available Products for all users -->
  <% if @products.any? %> <!-- Check if there are any products -->
    <div class="row">
      <% @products.each do |product| %>
        <% if product.stock > 0 %> <!-- Show only products with stock > 0 for all users -->
          <div class="col-md-4 mb-4"> <!-- Adjust the column size as needed -->
            <div class="card">
              <div class="card-body">
                <% if product.image.attached? %>
                  <div class="product-image">
                    <%= image_tag product.image, class: "img-fluid", style: "max-height: 300px; object-fit: cover;" %> <!-- Control image size -->
                  </div>
                <% end %>
                <h3 class="card-title"><%= product.name %></h3>
                <p class="card-text">Price: <%= number_to_currency(product.price) %></p>
                <p class="card-text">Stock: <%= product.stock %></p>
                <p>
                  <%= link_to "Show this product", product, class: "btn btn-primary" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p>No products available.</p>
  <% end %>

  <!-- Sold Out Products for signed-in users (admins) -->
  <% if user_signed_in? %>
    <h2 class="mt-5">Sold Out Products</h2>
    <div class="row">
      <% @products.each do |product| %>
        <% if product.stock == 0 %> <!-- Show only sold-out products for signed-in users -->
          <div class="col-md-4 mb-4">
            <div class="card border-danger">
              <div class="card-body">
                <% if product.image.attached? %>
                  <div class="product-image">
                    <%= image_tag product.image, class: "img-fluid", style: "max-height: 300px; object-fit: cover;" %>
                  </div>
                <% end %>
                <h3 class="card-title text-danger"><%= product.name %> (Sold Out)</h3>
                <p class="card-text">Price: <%= number_to_currency(product.price) %></p>
                <p class="card-text text-danger">Stock: 0</p>
                <p>
                  <%= link_to "Show this product", product, class: "btn btn-danger" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
